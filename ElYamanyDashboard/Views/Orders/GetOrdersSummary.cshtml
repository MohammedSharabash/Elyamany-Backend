@model IEnumerable<ElYamanyDashboard.Models.Views.AreaOrders>

@{
    ViewBag.Title = "GetOrdersSummary";
}

<h2 style="text-align:center;color:white;border-radius:25px;background:#007bff">الأوردرات</h2>

<div class="card">

    <div class="card-header">
        <h3 class="card-title"></h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>

                    <th>
                        @Html.DisplayName("المنطقة")
                    </th>
                    <th>
                        @Html.DisplayName("عدد الطلبات")
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OrdersCount)
                        </td>
                        <td>
                            @Html.ActionLink("عرض الطلبات", "index", new { AreaId = item.AreaId })
                        </td>
                    </tr>

                }

            </tbody>

        </table>
    </div>
    <!-- /.card-body -->
</div>
