@model IEnumerable<ElYamanyDashboard.Models.Notification>

@{
    ViewBag.Title = "Index";
}

<h2 style="text-align:center;color:white;border-radius:25px;background:#007bff">ريبورت الاشعارات</h2>


@using (Html.BeginForm())
{
    <div class="card">

        <div class="form-group">
            @Html.Label("كود العضو", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("UserId", null, htmlAttributes: new { @class = "form-control autocompleteUsers" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="عرض" class="btn btn-primary" />
            </div>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <table id="example" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayName("نوع الاشعار")
                        </th>
                        <th>
                            @Html.DisplayName("العضو")
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Message)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MessageAR)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UserLevel)
                        </th>
                        <th>
                            @Html.DisplayName("تاريخ الارسال")
                        </th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.NotificationType.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.User.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Message)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MessageAR)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserLevel)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreationDateEgypt)
                        </td>

                    </tr>

                    }

                </tbody>

            </table>
        </div>
        <!-- /.card-body -->
    </div>

}
<table class="table">

    @foreach (var item in Model)
    {
    }

</table>
