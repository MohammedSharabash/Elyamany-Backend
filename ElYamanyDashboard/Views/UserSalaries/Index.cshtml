@model IEnumerable<ElYamanyDashboard.Models.UserSalary>

@{
    ViewBag.Title = "Index";
}

 
<h2 style="text-align:center;color:white;border-radius:25px;background:#007bff">قبض الأعضاء</h2>
<div class="card">
    <div class="card-header center-block">
        <h4>مجموع قبض الاعضاء خلال الشهر المنتهي :- @ViewBag.TotalSalaryInPastMonth</h4>
        <h4>مجموع قبض الاعضاء خلال الشهر الحالي :- @ViewBag.TotalSalaryInThisMonth</h4>
    </div>
    <div>
        <a href="/UserSalaries/Index?IsDeliverd=1" class="btn btn-primary">
            <i class="fa fa-info" aria-hidden="true"></i>تم التسليم
        </a>
        <a href="/UserSalaries/Index?IsDeliverd=2" class="btn btn-primary">
            <i class="fa fa-info" aria-hidden="true"></i>لم يتم التسليم
        </a>
        @*<a href="/UserSalaries/Index?IsDeliverd=3" class="btn btn-primary">
            <i class="fa fa-info" aria-hidden="true"></i>تم تعطيله
        </a>*@
        <a href="/UserSalaries/Index" class="btn btn-primary">
            <i class="fa fa-info" aria-hidden="true"></i>الكل
        </a>
        @*<a href="http://projectegy-001-site41.gtempurl.com/api/CalculateSalaryForAllUsers" target="_blank" class="btn btn-primary">
            <i class="fa fa-info" aria-hidden="true"></i>اصدار القبض لجميع الاعضاء
        </a>*@
    </div>
    <label>اجمالي العدد للشهر المنتهي :- @ViewBag.TotalPastMonth</label>
    <label>اجمالي العدد للشهر الحالي :- @ViewBag.TotalCurrentMonth</label>

    <!-- /.card-header -->
    <div class="card-body">
        <table id="example" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayName("اسم العضو")
                    </th>
                    <th>
                        @Html.DisplayName("كود العضو")
                    </th>
                    <th>
                        @Html.DisplayName("الراعي")
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PersonalPoints)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.GroupPoints)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Deduction)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SalaryAmount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CreationDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PayDate)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.UserCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.SponsorName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PersonalPoints)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GroupPoints)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Deduction)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SalaryAmountInt)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreationDateEgypt)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PayDateEgypt)
                    </td>
                    <td>
                        @Html.ActionLink("تعديل", "Edit", new { id = item.Id })
                    </td>
                </tr>


                }

            </tbody>

        </table>
    </div>
    <!-- /.card-body -->
</div>
