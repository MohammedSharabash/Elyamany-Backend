@using ElYamanyDashboard.Models
@model LoginViewModel

@{
    ViewBag.Title = "Log in";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <!-- IE Compatibility Meta -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- First Mobile Meta -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Elyamany | Dashboard</title>
    <link rel='stylesheet' href='~/LoginContent/css/bootstrap.css' />
    <link rel='stylesheet' href='~/LoginContent/css/bootstrap_rtl.css' />
    <link rel='stylesheet' href='~/LoginContent/css/font-awesome.min.css' />
    <link rel='stylesheet' href='~/LoginContent/css/style.css' />
    <link rel='stylesheet' href='http://fonts.googleapis.com/css?family=Droid+Sans:400,700'>
 
</head>

<body class="login">
    <!-- Start Section -->
    <section class="text-center">
        <div class="fields">
            <div class="container">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    <!-- Start Contact Form -->
                    <form role="form">
                        <div class="col-lg-12" id="divform">
                            @*<h1>ما هو بريدك الالكتروني وكلمه مرورك ؟</h1>*@

                            <div class="form-group">
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control input-lg", @placeholder = "البريد الالكتروني" } })
                            </div>
                            <div class="form-group ">
                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control input-lg", @placeholder = "كلمه المرور ", @autocomplete= "off" } })
                            </div>
                            @Html.ValidationSummary(true, "", new { @class = "text-primary" })

                            <div class="form-group">
                                <input type="submit" class="btn  btn-lg" value="تسجيل الدخول">
                            </div>
                        </div>
                    </form>
                }
            </div>
            <!-- End Contact Form -->
        </div>
    </section>
    <!-- End Section  -->

    <script src="~/LoginContent/js/jquery-1.11.1.min.js"></script>
    <script src="~/LoginContent/js/bootstrap.min.js"></script>
    <script src="~/LoginContent/js/wow.min.js"></script>
    <script>new WOW().init();</script>

</body>
</html>


