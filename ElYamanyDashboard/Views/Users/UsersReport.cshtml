@model IEnumerable<ElYamanyDashboard.Models.Views.UserReport>

@{
    ViewBag.Title = "Index";
}

<h2 style="text-align:center;color:white;border-radius:25px;background:#007bff">ريبورت الأعضاء</h2>

@using (Html.BeginForm())
{
<div class="card">

    <div class="form-group">
        @Html.Label("كود العضو", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("UserId", null, htmlAttributes: new { @class = "form-control autocompleteUsers" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="عرض" class="btn btn-primary" />
        </div>
    </div>
    @if (ViewBag.UserData != null)
    { <h5>اسم العضو  :- @ViewBag.UserData.FullName || كود العضو :- @ViewBag.UserData.UserCode</h5>
    
    }
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.UserLable)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.GroupPoints)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PersonalPoints)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PhoneNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FullName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SponsorUserCode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserCode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserLevel)
                    </th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserLable)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GroupPoints)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PersonalPoints)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SponsorUserCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserLevel)
                    </td>
                </tr>

                }

            </tbody>

        </table>
    </div>
    <!-- /.card-body -->
</div>

}