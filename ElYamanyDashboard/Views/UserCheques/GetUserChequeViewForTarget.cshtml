@model IEnumerable<ElYamanyDashboard.Models.Views.UserChequeViewForTarget>

@{
    ViewBag.Title = "Index";
}

<h2 style="text-align:center;color:white;border-radius:25px;background:#007bff">الاعضاء الفائزين  بالشيكات</h2>

<div class="card">


    <!-- /.card-header -->
    <div class="card-body">
        <table id="example" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.UserCode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FullName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PhoneNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ChequeNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ChequeCount)
                    </th>
                    <th>ملاحظة</th>
                    <th>الحالة</th>
                    <th>التاريخ</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ChequeNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ChequeCount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserChequeNote.Note)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserChequeNote.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserChequeNote.CreationDateEgypt)
                    </td>
                    <td>
                        @*@Html.ActionLink("تعديل", "EditUserChequeNotes", new { Id = item.Id, ChequeNumber=item.ChequeNumber})*@
                        <a href="/UserCheques/EditUserChequeNotes?Id=@item.Id&ChequeNumber=@item.ChequeNumber">تعديل</a>
                    </td>
                </tr>
                }
            </tbody>

        </table>
    </div>
    <!-- /.card-body -->
</div>
